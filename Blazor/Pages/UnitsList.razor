<PageTitle>Unit list</PageTitle>

@using Blazor.Data
@inject UnitService unit
@inject FileSystemService fss

<h1>Units</h1>

@if (units == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>LVL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in units)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.Class</td>
                    <td>@item.LVL</td>
                    <td><button class="btn btn-warning" @onclick="() => units.Remove(item)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-success" @onclick="fss.UploadImageToDb">Upload to DB</button>
    <button class="btn btn-success" @onclick="fss.DownloadToLocal">Download</button>
}

@code {
    [Parameter]
    public List<Unit>? units { get; set; }
}

